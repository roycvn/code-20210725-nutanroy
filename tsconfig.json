{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule" : true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
    },
    "lib": ["es2015"],
    "include": [
      "./*.ts"
   ],
   "exclude": [
      "node_modules",
   ]
  }